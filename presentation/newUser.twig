    <link rel="stylesheet" href="css/style.css" />
    <title>Uw Westvloamse datingsite</title>
  </head>

  <body>
    <header class="headerImage">
      <div class="login clearFix">
        <form action="login.html" method="post" class="login" id="login" name="login">
          <label for="username">gebruikersnaam :<input type="text" id="username" name="username"></label>
          <label for="password">wachtwoord :<input type="password" id="password" name="password"></label>
        </form>
      </div>

      <h1><span>Losse Flodders</span></h1>
      <p>Westvlaamse datingsite</p>

      <nav class="hoofdmenu clearFix">
        <ul>
          <li><a href="index.twig" id="a"><p>Menu</p></a></li>
          <li><a href="profielaanmaak.twig" id="b" alt="profiel" title="profiel"><p>Profiel</p></a></li>
          <li><a href="#" id="c"><p>Matchen</p></a></li>
          <li><a href="#" id="d"><p>Instellingen</p></a></li>
        </ul>
      </nav>

    </header>



    <div class="inhoud clearFix">

      <section class="balkLinks">
        <h1>balk links</h1>
      </section>

      <div class="container">
        <fieldset class="vast">
          <h1>Profiel Aanmaak</h1>
          <form action="profiel.html" method="post" class="profielForm" id="profileData" name="profileData">
            <div>
              <label for="username" >Userame:</label>
              <input type="text" id="username" name="username" title="username">
            </div>
            <div>
              <label for="password">Password:</label>
              <input type="text" id="password" name="password" title="password" placeholder="{{user.password}}">
            </div>
            <div>
              <label for="password">Confirm Password:</label>
              <input type="text" id="confirmPassword" name="confirmPassword" title="confirmPassword">
            </div>
            <div>
              <span>email</span>
              <input type="email" id="email" name="email" title="email"s>
            </div>
            <div>
              <span>Geslacht</span>
              <label for="sex" class="labelradio labellook"><input type="radio" id="sex" name="sex" value="m"/>Man</label>
              <label for="sex" class="labelradio labellook"><input type="radio" id="sex" name="sex" value="f"/>Vrouw</label>
              <label for="sex" class="labelradio labellook"><input type="radio" id="sex" name="sex" value="o"/>Anders</label>
            </div>
            <div>
              <label for="birthDate">Geboorte Datum:</label>
              <input type="date" id="birthDate" name="birthDate" title="Geboorte Datum 1956-12-31">
            </div>
            <div>
              <span>Preference</span>
              <label for="preference" class="labelradio labellook"><input type="radio" id="preference" name="preference" value="m"/>Man</label>
              <label for="preference" class="labelradio labellook"><input type="radio" id="preference" name="preference" value="f"/>Vrouw</label>
              <label for="preference" class="labelradio labellook"><input type="radio" id="preference" name="preference" value="a"/>Man & Vrouw</label>
            </div>
            <div>
              <label for="hairColor" >hairColor:</label>
              <input type="text" id="hairColor" name="hairColor" title="hairColor">
            </div>
            <div>
              <label for="length" class="verplicht labellook">Lengte</label>
              <input type="number" id="length" name="lenght" required/>
            </div>
            <div>
              <label for ="build" class="verplicht labellook">Figuur</label>
              <select id="build" name="build" required>
                <option value="mager">Mager</option>
                <option value="slank">Slank</option>
                <option value="gespierd">Gespierd</option>
                <option value="bigboned">Big Boned</option>
                <option value="muffintop">Muffin Top</option>
              </select>
            </div>
            <div>
              <label for="eyeColor">Oog Kleur:</label>
              <input type="text" id="eyeColor" name="eyeColor" title="eyeColor">
              </select>
            </div>
            <div>
              <label>Soort relatie</label>
              <label for="friends" class="labelcheckbox labellook"><input type="checkbox" id="friends" name="friends" value="1">Vriendschap</label>
              <label for="oneNight" class="labelcheckbox labellook"><input type="checkbox" id="oneNight" name="oneNight" value="1">One night stand</label>
              <label for="longTerm" class="labelcheckbox labellook"><input type="checkbox" id="longTerm" name="longTerm" value="1">Lange termijn</label>
            </div>
            <div>
              <label for="bio">Bio:</label>
              <textarea id="bio" name="bio" title="bio"></textarea>
            </div>
            <div>
              <label for="postcode" class="verplicht labellook">Lengte</label>
              <input type="number" id="postcode" name="postcode"/>
            </div>
            <div>
              <label for="region" >Regio:</label>
              <input type="text" id="region" name="region" title="region">
            </div>
            <div>
              <label for ="occupation" class="verplicht labellook">Occupation</label>
              <select id="occupation" name="occupation">
                <option value="student">student</option>
                <option value="ik doe niet veel">ik doe niet veel</option>
                <option value="kelner">kelner</option>
                <option value="werknemer">werknemer</option>
                <option value="werkgever">werkgever</option>
              </select>
            </div>
            <div>
              <span>Roker</span>
              <label for="smoker" class="labelradio labellook"><input type="radio" id="smoker" name="smoker" value="1"/>Ja</label>
              <label for="smoker" class="labelradio labellook"><input type="radio" id="smoker" name="smoker" value="0"/>Nee</label>
            </div>            
            <div>
              <input type="submit" value="Add" name="addUser"/>            
            </div>
          </form>
        </fieldset>
      </div>

      <section class="balkRechts">
        <h1>BALK RECHTS</h1>
      </section>


    </div>

    <footer class="hoofdFooter">
      <p><span>This project is build by Jordy, Wouter, Gregory and Micha &COPY; 2016</span></p>
    </footer>
