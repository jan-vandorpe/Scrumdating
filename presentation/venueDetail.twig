                    <li><a href="eventControl.php?action=showEvents" id="d"><p>Events</p></a></li>
                </ul>
            </nav>
        </header>
    <div class="inhoud clearFix">

      

      <div class="container">
        <fieldset class="vast">
          <h1>Venue Gegevens</h1>
          <form action="adminControl.php" method="post" class="profielForm" id="venueData" name="venueData">
            <div>
              <label for="venueID">Venue ID:</label>
              <input type="number" id="venueID" name="venueID" title="venueID" value="{{venue.venueID}}">
            </div>
            <div>
              <label for="venueName" >Venue Name:</label>
              <input type="text" id="venueName" name="venueName" title="venueName" value="{{venue.venueName}}">
            </div>
            <div>
              <label for="venueCity" >Venue City:</label>
              <input type="text" id="venueCity" name="venueCity" title="venueCity" value="{{venue.venueCity}}">
            </div>
            <div>
              <label for="venueStreet" >Venue Street:</label>
              <input type="text" id="venueStreet" name="venueStreet" title="venueStreet" value="{{venue.venueStreet}}">
            </div>
            <div>
              <label for="venueStreetNR" >Venue Street NR:</label>
              <input type="number" id="venueStreetNR" name="venueStreetNR" title="venueStreetNR" value="{{venue.venueStreetNR}}">
            </div>
            <div>
              <label for="venueCapacity" >Venue Capacity:</label>
              <input type="number" id="venueCapacity" name="venueCapacity" title="venueCapacity" value="{{venue.venueCapacity}}">
            </div>
            <div>
              <input type="submit" Value="Update" name="updateVenue"/>
            </div>                          
          </form>
        </fieldset>
      </div>

      


